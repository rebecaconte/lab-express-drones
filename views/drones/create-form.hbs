<h2>Create a new drone</h2>

<!-- route for new drone  -->
<form action="/drones/create" method="POST">

  <div class="mb-3">
      <label for="name" class="form-label" >Name</label>
      <input type="text" class="form-control"  name="name">
      
  </div>
  <div class="mb-3">

      <label for="propellers" class="form-label">Propellers</label>
      <input type="text" class="form-control"  name="propellers">

  </div>
  <div class="mb-3">

      <label for="maxSpeed" class="form-label" >maxSpeed</label>
      <input type="text" class="form-control" name="maxSpeed">

  </div>

  <button class="btn btn-success" type="submit">Submit</button>
    
</form>